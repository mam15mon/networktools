{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "main",
	"description": "Capabilities for the app window",
	"windows": [
		"main",
		"secondary"
	],
	"permissions": [
		"core:path:default",
		"core:event:default",
		"core:window:default",
		"core:app:default",
		"core:resources:default",
		"core:menu:default",
		"core:tray:default",
		"shell:allow-open",
		{
			"identifier": "shell:allow-execute",
			"allow": [
				{
					"name": "exec-sh",
					"cmd": "sh",
					"args": [
						"-c",
						{
							"validator": "\\S+"
						}
					],
					"sidecar": false
				},
				{
					"name": "open-explorer",
					"cmd": "explorer",
					"args": [
						{
							"validator": ".*"
						}
					],
					"sidecar": false
				},
				{
					"name": "open-folder",
					"cmd": "open",
					"args": [
						{
							"validator": ".*"
						}
					],
					"sidecar": false
				},
				{
					"name": "open-cmd",
					"cmd": "cmd",
					"args": [
						"/c",
						{
							"validator": ".*"
						}
					],
					"sidecar": false
				}
			]
		},
		"notification:default",
		"os:allow-platform",
		"os:allow-arch",
		"os:allow-family",
		"os:allow-version",
		"os:allow-locale",
		"fs:allow-download-read",
		"fs:allow-download-write",
		"fs:allow-appdata-read",
		"fs:allow-appdata-write",
		"fs:allow-exists",
		"fs:allow-mkdir",
		{
			"identifier": "fs:allow-write-file",
			"allow": [
				{ "path": "$DOWNLOAD/*" },
				{ "path": "$APPDATA/*" }
			]
		},
		{
			"identifier": "fs:allow-read-file",
			"allow": [
				{ "path": "$DOWNLOAD/*" },
				{ "path": "$APPDATA/*" }
			]
		},
		{
			"identifier": "opener:allow-open-path",
			"allow": [
				{ "path": "$DOWNLOAD" },
				{ "path": "$DOWNLOAD/**" },
				{ "path": "$APPDATA" },
				{ "path": "$APPDATA/**" }
			]
		},
		{
			"identifier": "opener:allow-reveal-item-in-dir",
			"allow": [
				{ "path": "$DOWNLOAD" },
				{ "path": "$DOWNLOAD/**" },
				{ "path": "$APPDATA" },
				{ "path": "$APPDATA/**" }
			]
		},
		"store:default",
		"core:webview:allow-create-webview",
		"core:webview:allow-create-webview-window"
	]
}
